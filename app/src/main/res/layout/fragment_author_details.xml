<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_gray"
    tools:context=".ui.author.AuthorDetailsFragment">

    <!-- Photo de l'Auteur -->
    <ImageView
        android:id="@+id/authorImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:background="@drawable/circle_background"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Nom de l'Auteur -->
    <TextView
        android:id="@+id/authorFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Victor Hugo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/authorImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Ligne de séparation -->
    <View
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/authorFullName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Date de naissance -->
    <TextView
        android:id="@+id/authorBirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26 février 1802"
        android:textSize="16sp"
        android:textColor="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/authorFullName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Date de décès -->
    <TextView
        android:id="@+id/authorDeathDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 mai 1885"
        android:textSize="16sp"
        android:textColor="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/authorBirthDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Biographie dans une CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/authorDeathDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/authorBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biographie détaillée de l'auteur..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:maxLines="6"
            android:ellipsize="end"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
